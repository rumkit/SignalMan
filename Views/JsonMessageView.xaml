<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SignalMan.Views.JsonMessageView">
  <Grid>
    <Border CornerRadius="5"  Background="{DynamicResource ThemeAccentBrush4}" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderMidBrush}">
      <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="24">
          <Border CornerRadius="5"  Background="{DynamicResource ThemeAccentBrush3}" BorderThickness="2" BorderBrush="{DynamicResource ThemeBorderMidBrush}">
            <TextBlock Margin="2,0,2,0" Text="{Binding Method}"></TextBlock>
          </Border>
          <TextBlock Text="{Binding Received}" Margin="10,1,1,1"></TextBlock>
        </StackPanel>

        <TextBlock Text="{Binding Text}" DockPanel.Dock="Top" Margin="3,10,3,0"></TextBlock>
      </DockPanel>
    </Border>
  </Grid>
</UserControl>
